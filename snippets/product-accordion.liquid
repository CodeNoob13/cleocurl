<div class="product_accordion_container" x-data="{isOpen: false}" style="margin-top: {{ margin_top }}">
    <div x-on:click="isOpen = !isOpen" class="product_accordion_content">
        <span class="product_accordion_title ">{{ title }}</span>
        <div :style="isOpen ? 'transform:rotate(45deg);' : 'transform: rotate(0deg);'">+</div>
    </div>
    <div class="product_accordion_description"
        x-ref="description"
        :style="isOpen ? 'max-height: ' + ($refs.description.scrollHeight + 20) + 'px; padding: 14px 0; opacity:100%;' : 'max-height:0; padding:0; opacity:0;'">{{ description }}</div>
    
</div>



<style>
  .product_accordion_container {
    width:100%;
  }

  .product_accordion_content {
    display:flex;
    cursor:pointer;
    font-weight:300;
    align-items:center;
  }

  .product_accordion_title {
    font-weight:400;
  }

  .product_accordion_content div {
  margin-left:auto;
  transition:transform .5s ease-in-out;
  font-size:20px;
}

  .product_accordion_content{
    position:relative;
    padding: 14px 0;
    }

  .product_accordion_content::after {
    content: "";
    width:100%;
    height:0.25px;
    opacity:10%;
    background-color:#000;
    position:absolute;
    bottom:0;
  }

  .product_accordion_description {
    overflow:hidden;
    transition: all 0.3s ease-out;
    }

}
</style>
